# ========================================
# NodeBBS Docker Compose 环境变量配置
# ========================================

# 应用名称
APP_NAME=nodebbs

# ========================================
# 数据库配置
# ========================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=nodebbs
POSTGRES_PORT=5432

# ========================================
# Redis 配置
# ========================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# ========================================
# API 服务配置
# ========================================
API_PORT=7100

# 用户缓存 TTL（秒）
# 开发环境: 30-60, 生产环境: 120-300
USER_CACHE_TTL=120

# JWT 配置
# 使用 `openssl rand -base64 32` 生成安全的密钥
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=1y

# CORS 配置
# 生产环境建议设置为具体的域名，例如: https://yourdomain.com
CORS_ORIGIN=*

# 应用 URL（OAuth 回调使用）
APP_URL=http://localhost:3100

# ========================================
# Web 前端配置
# ========================================
WEB_PORT=3100

# Web 服务内部访问 API 的地址
# 通常保持默认 http://api:7100 即可，走 Docker 内部网络
SERVER_API_URL=http://api:7100

# ========================================
# 时区配置
# ========================================
TZ=Asia/Shanghai
